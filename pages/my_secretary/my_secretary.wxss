/* my_secretary.wxss */
.container {
  background-color: #EFF1F4;
}
.header {
  color: #9299A3;
  padding: 25rpx 75rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  text-align: center;
}

.item-header {
  height: 40rpx;
  background-color: #78B8E9;
  color: white;
  padding: 10rpx 25rpx;
  text-align: left;
  font-size: 30rpx;
  border-bottom: 1px #B1ADA9 solid;
}

.item-main {
  background-color: #D8D8D8;
  color: #8A929F;
  font-size: 30rpx;
  height: 360rpx;
  border-bottom: 1px #B6B6B6 solid;
}
.secretary-img {
  width: 250rpx;
  height: 360rpx;
  border-right: 1px #989694 solid;
  border-bottom: 1px #989694 solid;
  position: relative;
  text-align: center;
}

.secretary-img .day {
  position: absolute;
  left: 0;
  bottom: 18rpx;
  color: white;
  width: 250rpx;
}

.telephone-img {
  width: 750rpx;
  height: 360rpx;
}