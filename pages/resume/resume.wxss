/* resume.wxss */
.container {
  background: #78B8E9;
}

.header {
  padding-top: 0rpx;
}

.money-block {
  width: 700rpx;
  height: 200rpx;
  background: white;
  margin: 0 auto;
  border-radius: 30rpx;
  padding: 35rpx auto 30rpx auto;
  text-align: center;  
}

.money-block .money {
  color: #F0CB34;
  font-size: 50rpx;
  margin: 30rpx auto;
  position: relative;
  top: 30rpx;
}

.money-block .hint {
  color: #5AA7E1;
  font-size: 34rpx;
  margin: auto;
  position: relative;
  top: 30rpx;
}

.share-btn {
  width: 400rpx;
  height: 60rpx;
  background-size: 100% 100% !important;
  margin: 25rpx auto;  
} 

.open-resume {
  background: white;
  font-size: 30rpx;
  color: #8F8E98;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 25rpx;
}


.switch {
  position: absolute;
  right: 10rpx;
}

wx-switch .wx-switch-input {
  width: 80rpx;
  height: 40rpx;
  border-color: #78B8E9 !important;
  background-color: #78B8E9 !important;
}
wx-switch .wx-switch-input:before {
  width: 38px;
  height: 18px;
}

wx-switch .wx-switch-input:after {
  width: 18px;
  height: 18px;
}

.info-block {
  padding: 30rpx;
}

.info-title {
  color: white;
  font-size: 30rpx;
}

.info-main {
  background: white;
  width: 640rpx;
  font-size: 30rpx;
  padding: 35rpx 30rpx;
  margin-top: 25rpx;
  color: #8F8E98;  
}

.info-main .item {
  margin-bottom: 35rpx;  
}

.info-main .item:last-child {
  margin-bottom: 0;
}

.info-money {
  color: #F0CB34;  
  float: right;
}