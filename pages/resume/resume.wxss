/* resume.wxss */
.container {
  background: #78B8E9;
}

.header {
  padding-top: 0rpx;
}

.money-block {
  width: 700rpx;
  height: 200rpx;
  background: white;
  margin: 0 auto;
  border-radius: 30rpx;
  padding: 35rpx auto 30rpx auto;
  text-align: center;  
}

.money-block .money {
  color: #F0CB34;
  font-size: 50rpx;
  margin: 30rpx auto;
  position: relative;
  top: 30rpx;
}

.money-block .hint {
  color: #5AA7E1;
  font-size: 34rpx;
  margin: auto;
  position: relative;
  top: 30rpx;
}

.share-btn {
  width: 400rpx;
  height: 60rpx;
  background-size: 100% 100% !important;
  margin: 25rpx auto;  
} 

.open-resume {
  background: white;
  font-size: 30rpx;
  color: #8F8E98;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 25rpx;
}


.switch {
  position: absolute;
  right: 10rpx;
}

wx-switch .wx-switch-input {
  width: 80rpx;
  height: 40rpx;
  border-color: #78B8E9 !important;
  background-color: #78B8E9 !important;
}
wx-switch .wx-switch-input:before {
  width: 38px;
  height: 18px;
}

wx-switch .wx-switch-input:after {
  width: 18px;
  height: 18px;
}

.info-block {
  padding: 30rpx;
}

.info-title {
  color: white;
  font-size: 30rpx;
}

.info-main {
  background: white;
  width: 640rpx;
  font-size: 30rpx;
  padding: 35rpx 30rpx;
  margin-top: 25rpx;
  color: #8F8E98;  
}

.info-main .item {
  margin: 25rpx 0;  
}

.info-main .item:first-child {
  margin-bottom: 0;
}

.member.info-main {
  padding: 20rpx 15rpx;
}

.info-money {
  color: #F0CB34;  
  float: right;
}

input {
  background: #D1EBFF;
  height: 40rpx;
  padding: 10rpx;
}

.captcha-btn-container {
  height: 0;
}
.captcha-btn {
  width: 145rpx;
  height: 60rpx;
  background: #78B8E9;
  color: white;
  line-height: 60rpx;
  position: relative;
  top: -71rpx;
  z-index: 99;
  margin: 0;
  right: -495rpx;
  font-size: 26rpx;
  padding: 0;
}

button {
  border-radius: 0;
  color: #84868E;
}

.text {
  font-size: 30rpx;
  color: white;
  padding-top: 50rpx;
}
.mobile-input {
  width: 460rpx;
  height: 60rpx;
}


.info-edit {
  height: 0;
  color: #78B8E9;
  position:relative;
  left:580rpx;
}
.info-save {
  left:260rpx;
}
.info-add {
  left:510rpx;
  float: left;
  z-index:99;
}

.info-form button {
  position:relative;
  top: -12rpx;
  color: #78B8E9;  
  border:0;
  background: rgba(0, 0, 0, 0);
  height: 55rpx;
  padding: 0;
  font-size: 30rpx;
}

.info-form button:after {
  border:0;
}

.info-form input{
  margin:15rpx 0;
}