/* evaluation.wxss */

page {
  height: 100%;
}

.container {
  background-size: 100% 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.main {
    margin-top: 120rpx;
}

.question {
    height: 400rpx;
    width: 640rpx;
    display: flex;
    justify-content: center;
    font-size: 28rpx;
    line-height: 45rpx;
    position: relative;
    top: -50rpx;
}
wx-radio .wx-radio-input {
    width: 30rpx;
    height: 30rpx;
    margin-left: 20rpx;
}

.option {
  margin-bottom: 10px;
  background: white;
  color: #84868E;
  padding: 30rpx;
  width: 650rpx;
}
.main-img {
    width: 530rpx;
    height: 671rpx;
}
